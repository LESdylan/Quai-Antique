{% extends 'base.html.twig' %}

{% block title %}Connexion - Le Quai Antique{% endblock %}

{% block stylesheets %}
<style>
    .login-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('images/login-header.jpg') }}') center/cover no-repeat;
        height: 30vh;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .login-header h1 {
        font-size: 3rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    
    .login-form {
        background-color: white;
        padding: 2.5rem;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }
    
    .form-divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: #6c757d;
    }
    
    .form-divider::before,
    .form-divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #dee2e6;
    }
    
    .form-divider span {
        margin: 0 1rem;
        font-size: 0.9rem;
    }
    
    .social-login {
        margin: 1.5rem 0;
    }
    
    .btn-social {
        width: 100%;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem;
        border-radius: 4px;
        font-weight: 500;
        color: white;
        text-decoration: none;
        transition: opacity 0.3s;
    }
    
    .btn-social:hover {
        opacity: 0.9;
    }
    
    .btn-facebook {
        background-color: #3b5998;
    }
    
    .btn-google {
        background-color: #db4437;
    }
    
    .register-link {
        text-align: center;
        margin-top: 1.5rem;
    }
</style>
{% endblock %}

{% block body %}
<!-- Login Header -->
<header class="login-header">
    <div class="container">
        <h1>Connexion</h1>
        <p class="lead">Accédez à votre compte Le Quai Antique</p>
    </div>
</header>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            
            <div class="login-form">
                <h2 class="text-center mb-4">Bienvenue</h2>
                
                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-sign-in-alt me-2"></i> Se connecter
                        </button>
                    </div>
                </form>
                
                <div class="register-link">
                    <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
                    <p><a href="#">Mot de passe oublié ?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
