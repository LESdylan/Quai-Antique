{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        .admin-sidebar {
            background-color: #343a40;
            min-height: calc(100vh - 56px);
            padding-top: 2rem;
        }
        
        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }
        
        .admin-sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .admin-sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .admin-sidebar .nav-link i {
            margin-right: 0.5rem;
            width: 20px;
            text-align: center;
        }
        
        .admin-content {
            padding: 2rem;
        }
        
        .table-responsive {
            overflow-x: auto;
        }
        
        .admin-header {
            background-color: #495057;
            color: white;
            padding: 1rem;
            margin-bottom: 2rem;
            border-radius: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {# Admin Sidebar #}
            <div class="col-md-3 col-lg-2 admin-sidebar">
                <nav class="nav flex-column">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'app_admin_dashboard' %}active{% endif %}" href="{{ path('app_admin_dashboard') }}">
                        <i class="fas fa-tachometer-alt"></i> Tableau de bord
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_menu' %}active{% endif %}" href="{{ path('app_admin_menu') }}">
                        <i class="fas fa-utensils"></i> Menu & Plats
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_category' %}active{% endif %}" href="{{ path('app_admin_category') }}">
                        <i class="fas fa-tags"></i> Catégories
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_images' %}active{% endif %}" href="{{ path('app_admin_images') }}">
                        <i class="fas fa-images"></i> Galerie Photos
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_reservations' %}active{% endif %}" href="{{ path('app_admin_reservations') }}">
                        <i class="fas fa-calendar-alt"></i> Réservations
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_hours' %}active{% endif %}" href="{{ path('app_admin_hours') }}">
                        <i class="fas fa-clock"></i> Horaires d'ouverture
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_promotions' %}active{% endif %}" href="{{ path('app_admin_promotions') }}">
                        <i class="fas fa-bullhorn"></i> Promotions
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_pages' %}active{% endif %}" href="{{ path('app_admin_pages') }}">
                        <i class="fas fa-file-alt"></i> Pages & Contenu
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_messages' %}active{% endif %}" href="{{ path('app_admin_messages') }}">
                        <i class="fas fa-envelope"></i> Messages
                        <span class="badge bg-danger float-end">3</span> {# Dynamic count here #}
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_media' %}active{% endif %}" href="{{ path('app_admin_media') }}">
                        <i class="fas fa-photo-video"></i> Media Library
                    </a>
                    {# Temporarily disable Users link until route is created #}
                    <a class="nav-link disabled" href="#">
                        <i class="fas fa-users"></i> Utilisateurs
                        <span class="badge bg-secondary">Soon</span>
                    </a>
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_settings' %}active{% endif %}" href="{{ path('app_admin_settings') }}">
                        <i class="fas fa-cog"></i> Paramètres
                    </a>
                    <hr class="bg-secondary">
                    <a class="nav-link" href="{{ path('app_home') }}">
                        <i class="fas fa-home"></i> Retour au site
                    </a>
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt"></i> Déconnexion
                    </a>
                </nav>
            </div>
            
            {# Admin Content #}
            <div class="col-md-9 col-lg-10 admin-content">
                {# Flash messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {# Page header #}
                <div class="admin-header">
                    <h1>{% block page_title %}Administration{% endblock %}</h1>
                </div>
                
                {# Page content #}
                {% block admin_content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Any admin-specific JavaScript can go here
        document.addEventListener('DOMContentLoaded', function() {
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    {% block admin_javascripts %}{% endblock %}
{% endblock %}
