{% extends 'base.html.twig' %}

{% block title %}Administration - Le Quai Antique{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .admin-sidebar {
            min-height: calc(100vh - 56px);
            background-color: #f8f9fa;
            padding: 20px 0;
        }
        .admin-content {
            padding: 20px;
        }
        .nav-pills .nav-link {
            border-radius: 0;
        }
        .nav-pills .nav-link.active {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block admin-sidebar">
                <div class="position-sticky">
                    <h5 class="mb-4">Administration</h5>
                    <div class="nav flex-column nav-pills">
                        <a class="nav-link active" href="{{ path('app_admin_dashboard') }}">
                            Tableau de bord
                        </a>
                        <a class="nav-link" href="{{ path('app_admin_images') }}">
                            Gestion des images
                        </a>
                        <a class="nav-link" href="#">
                            Réservations
                        </a>
                        <a class="nav-link" href="#">
                            Menu et plats
                        </a>
                        <a class="nav-link" href="#">
                            Utilisateurs
                        </a>
                        <a class="nav-link" href="#">
                            Paramètres
                        </a>
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a>
                    </div>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Tableau de bord</h1>
                </div>

                <div class="alert alert-info">
                    Bienvenue dans l'interface d'administration du Quai Antique.
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                Réservations récentes
                            </div>
                            <div class="card-body">
                                <p>Aucune réservation récente.</p>
                                <a href="#" class="btn btn-outline-secondary">Voir toutes les réservations</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                Galerie d'images
                            </div>
                            <div class="card-body">
                                <p>Gérez les images de votre restaurant.</p>
                                <a href="{{ path('app_admin_images') }}" class="btn btn-outline-secondary">Gérer les images</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
