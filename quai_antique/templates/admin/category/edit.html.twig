{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Modifier la catégorie</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fas fa-edit me-1"></i>
                        Édition de la catégorie
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    
                    {% if form.description is defined %}
                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    {% endif %}
                    
                    {% if form.position is defined %}
                    <div class="mb-3">
                        {{ form_label(form.position) }}
                        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.position) }}
                        <small class="form-text text-muted">Position d'affichage de la catégorie (ordre croissant)</small>
                    </div>
                    {% endif %}
                    
                    {% if form.isActive is defined %}
                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(form.isActive) }}
                    </div>
                    {% endif %}
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                        </a>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Enregistrer
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
