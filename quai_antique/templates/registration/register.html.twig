{% extends 'base.html.twig' %}

{% block title %}Inscription - Le Quai Antique{% endblock %}

{% block stylesheets %}
<style>
    .register-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('images/register-header.jpg') }}') center/cover no-repeat;
        height: 30vh;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .register-header h1 {
        font-size: 3rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    
    .register-form {
        background-color: white;
        padding: 2.5rem;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }
    
    .form-section {
        margin-bottom: 2rem;
    }
    
    .section-title {
        border-bottom: 2px solid var(--primary);
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
        font-family: 'Playfair Display', serif;
    }
    
    .login-link {
        text-align: center;
        margin-top: 1.5rem;
    }
</style>
{% endblock %}

{% block body %}
<!-- Register Header -->
<header class="register-header">
    <div class="container">
        <h1>Créer un compte</h1>
        <p class="lead">Rejoignez la communauté Le Quai Antique</p>
    </div>
</header>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            
            <div class="register-form">
                <h2 class="mb-4">Inscription</h2>
                
                {{ form_start(registrationForm) }}
                
                <div class="form-section">
                    <h4 class="section-title">Informations personnelles</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.lastName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.firstName) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>
                </div>
                
                <div class="form-section">
                    <h4 class="section-title">Préférences de réservation</h4>
                    <div class="mb-3">
                        {{ form_row(registrationForm.defaultGuestCount) }}
                        <small class="form-text text-muted">Ce nombre sera automatiquement renseigné lors de vos réservations.</small>
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.allergies) }}
                        <small class="form-text text-muted">Ces informations nous aideront à mieux vous servir lors de vos visites.</small>
                    </div>
                </div>
                
                <div class="form-section">
                    <h4 class="section-title">Sécurité du compte</h4>
                    <div class="mb-4">
                        {{ form_row(registrationForm.plainPassword) }}
                        <small class="form-text text-muted">Votre mot de passe doit comporter au moins 6 caractères.</small>
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i> Créer mon compte
                    </button>
                </div>
                
                <div class="login-link">
                    <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>
                
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
