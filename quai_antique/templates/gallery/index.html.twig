{% extends 'base.html.twig' %}

{% block title %}Notre Cuisine - Le Quai Antique{% endblock %}

{% block stylesheets %}
<style>
    .gallery-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('images/gallery-header.jpg') }}') center/cover no-repeat;
        height: 40vh;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .gallery-header h1 {
        font-size: 3rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    
    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-gap: 20px;
        margin-bottom: 3rem;
    }
    
    .gallery-item {
        position: relative;
        height: 250px;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }
    
    .gallery-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
    }
    
    .gallery-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }
    
    .gallery-item:hover .gallery-image {
        transform: scale(1.05);
    }
    
    .gallery-caption {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 15px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }
    
    .gallery-item:hover .gallery-caption {
        opacity: 1;
        transform: translateY(0);
    }
    
    .gallery-title {
        font-weight: bold;
        margin-bottom: 5px;
    }
    
    .gallery-description {
        font-size: 0.9rem;
        margin-bottom: 0;
    }
    
    .item-appear {
        animation: fadeIn 0.8s;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .gallery-filter {
        margin-bottom: 2rem;
        text-align: center;
    }
    
    .filter-btn {
        display: inline-block;
        padding: 8px 20px;
        margin: 0 5px 10px 5px;
        background: none;
        border: 2px solid var(--primary);
        border-radius: 25px;
        color: var(--primary);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .filter-btn:hover, .filter-btn.active {
        background-color: var(--primary);
        color: white;
    }
</style>
{% endblock %}

{% block body %}
<!-- Gallery Header -->
<header class="gallery-header">
    <div class="container">
        <h1>Notre Cuisine en Images</h1>
        <p class="lead">Découvrez l'art culinaire du Chef Arnaud Michant</p>
    </div>
</header>

<div class="container mb-5">
    <!-- Gallery Filters -->
    <div class="gallery-filter">
        <button class="filter-btn active" data-filter="all">Tous</button>
        <button class="filter-btn" data-filter="entrees">Entrées</button>
        <button class="filter-btn" data-filter="plats">Plats</button>
        <button class="filter-btn" data-filter="desserts">Desserts</button>
        <button class="filter-btn" data-filter="ambiance">Ambiance</button>
    </div>
    
    <!-- Gallery Grid -->
    <div class="gallery-grid">
        {% for image in images %}
            <div class="gallery-item item-appear" data-category="{{ image.category|default('all') }}">
                <img src="{{ asset('images/gallery/' ~ image.filename) }}" alt="{{ image.title }}" class="gallery-image">
                <div class="gallery-caption">
                    <h4 class="gallery-title">{{ image.title }}</h4>
                    {% if image.description %}
                        <p class="gallery-description">{{ image.description }}</p>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    Aucune image n'est disponible pour le moment.
                </div>
                
                <!-- Placeholder images for demonstration -->
                <div class="gallery-grid">
                    {% set categories = ['entrees', 'plats', 'desserts', 'ambiance'] %}
                    {% for i in 1..9 %}
                        <div class="gallery-item item-appear" data-category="{{ categories[i % 4] }}">
                            <img src="https://source.unsplash.com/random/300x200?food,restaurant,{{ i }}" alt="Plat gastronomique" class="gallery-image">
                            <div class="gallery-caption">
                                <h4 class="gallery-title">Création du Chef #{{ i }}</h4>
                                <p class="gallery-description">Une délicieuse création du Chef Arnaud Michant</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    
    <!-- Reservation CTA -->
    <div class="text-center mt-5">
        <h3 class="mb-3">Envie de goûter ces merveilles ?</h3>
        <a href="{{ path('app_reservation') }}" class="btn btn-primary btn-lg">Réserver une table</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gallery filtering
        const filterButtons = document.querySelectorAll('.filter-btn');
        const galleryItems = document.querySelectorAll('.gallery-item');
        
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                filterButtons.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to clicked button
                this.classList.add('active');
                
                const filter = this.getAttribute('data-filter');
                
                galleryItems.forEach(item => {
                    const category = item.getAttribute('data-category');
                    
                    if (filter === 'all' || category === filter) {
                        item.style.display = 'block';
                        setTimeout(() => {
                            item.classList.add('item-appear');
                        }, 100);
                    } else {
                        item.style.display = 'none';
                        item.classList.remove('item-appear');
                    }
                });
            });
        });
    });
</script>
{% endblock %}
